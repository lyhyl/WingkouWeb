@{
    ViewBag.Title = "CG 实验室";
}

@section scripts {
    <script src="~/Scripts/holder.js"></script>
}

<style type="text/css">
    .fill {
        height: 100%;
    }
</style>

<div class="panel panel-default" style="padding-bottom: 42.85%; position:relative;">
    <div style="position:absolute; top: 0; bottom: 0; left: 0; right: 0;">
        <div id="projectCarousel" class="carousel slide fill">
            <ol class="carousel-indicators" style="margin-bottom: 0;">
                <li data-target="#projectCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#projectCarousel" data-slide-to="1"></li>
            </ol>

            <div class="carousel-inner fill">
                <div class="item active fill">
                    <a href="@Url.Action("HRUT", "CGLab")">
                        <img id="imghurt" src="~/Content/ui/cglab/HRUT.jpg" style="width:100%" data-src="holder.js/100px100p?text=Who are U today">
                    </a>
                </div>
                <div class="item fill">
                    <a href="@Url.Action("IOIO", "CGLab")">
                    <img id="imgioio" src="~/Content/ui/cglab/IOIO.jpg" style="width:100%" data-src="holder.js/100px100p?text=IOIO">
                    </a>
                </div>
            </div>

            <a href="#projectCarousel" data-slide="prev" class="fill">
                <div class="carousel-control left fill" style="display: table; overflow: hidden;">
                    <div style="display: table-cell; vertical-align: middle;">
                        <p style="font-size:xx-large"> &lsaquo;</p>
                    </div>
                </div>
            </a>
            <a href="#projectCarousel" data-slide="next" class="fill">
                <div class="carousel-control right fill" style="display: table; overflow: hidden;">
                    <div style="display: table-cell; vertical-align: middle;">
                        <p style="font-size:xx-large"> &rsaquo;</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Wingkou's CG Lab!</h3>
    </div>
    <div class="panel-body">
        <ul>
            <li>@Html.ActionLink("How are U today?", "HRUT", "CGLab")</li>
            <li>@Html.ActionLink("IOIO sketch!", "IOIO", "CGLab")</li>
        </ul>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">CG Lab API</h3>
    </div>
    <div class="panel-body">
        <p class="text-primary">若想使用上述效果服务,可以在C#内添加WCF服务:</p>
        <a href="http://119.29.244.64:32768/ImageProcessingService.svc">
            <p class="text-info" style="word-break:break-all">
                <strong>http://119.29.244.64:32768/ImageProcessingService.svc</strong>
            </p>
        </a>
    </div>
</div>
