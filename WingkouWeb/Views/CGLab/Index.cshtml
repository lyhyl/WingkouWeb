
@{
    ViewBag.Title = "CG 实验室";
}

@section scripts {
    <script src="~/Scripts/holder.js"></script>
}

<div class="panel panel-default">
    <div id="projectCarousel" class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#projectCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#projectCarousel" data-slide-to="1"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img data-src="holder.js/100px300?theme=sky&text=How are U today">
            </div>
            <div class="item">
                <img data-src="holder.js/100px300?theme=vine&text=IOIO sketch">
            </div>
        </div>

        <a href="#projectCarousel" data-slide="prev">
            <div class="carousel-control left" style="display: table; height: 300px; overflow: hidden;">
                <div style="display: table-cell; vertical-align: middle;">
                    &lsaquo;
                </div>
            </div>
        </a>
        <a href="#projectCarousel" data-slide="next">
            <div class="carousel-control right" style="display: table; height: 300px; overflow: hidden;">
                <div style="display: table-cell; vertical-align: middle;">
                    &rsaquo;
                </div>
            </div>
        </a>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Wingkou!</h3>
    </div>
    <div class="panel-body">
        <ul>
            <li>@Html.ActionLink("How are U today?", "HRUT", "CGLab")</li>
            <li>@Html.ActionLink("IOIO sketch!", "IOIO", "CGLab")</li>
        </ul>
    </div>
</div>
